{
  "compilerOptions": {
    "target": "ES2019",
    "module": "CommonJS",
    "baseUrl": "./",
    "lib": ["ES2019", "ESNext"],
    "declaration": true,
    "outDir": "lib",
    "rootDir": "./",
    "strict": true,
    "types": ["node"],
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strictPropertyInitialization": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "stripInternal": true
  },
  "include": ["src"],
  "exclude": ["lib"]
}
